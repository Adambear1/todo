{% extends 'base.jinja2' %}

{% block subtitle %}Add a task{% endblock subtitle %}

{% block content %}
    <nav>
        <a href="/all">Go To All</a>
        <a href="/login">Login!</a>
    </nav>
<form method="POST">
    <label for="name-input">Task:</label><input id="name-input" type="text" name="name">
